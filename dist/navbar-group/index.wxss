.m-tabs {
  position: relative;
  justify-content: center;
  height: 88rpx;
  overflow: hidden;
}

.m-tabs .m-tabs__scroll {
  margin-bottom: 10rpx;
  height: 88rpx;
}

.m-tabs .m-tabs__scroll .m-tabs__nav {
  position: relative;
  display: flex;
}

.m-tabs .m-tabs__scroll .m-tabs__nav .m-tabs__line {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
  height: 6rpx;
  border-radius: 12rpx;
  background-color: var(--color-primary, #409EFF);
  transition-duration: 0.3s;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
