<view class="m-tab-item is-active" bind:tap="onClick">
  <view class="m-tab-item__content">
    <view class="m-tab-item__text" style="{{ activeColor ? 'color:' + activeColor: '' }}">
      {{ title }}
      <m-badge wx:if="{{ value }}" custom-class="badge-custom" value="{{ value }}" static />
    </view>
  </view>
</view>
