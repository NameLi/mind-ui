.iconfont {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: color .2s ease-in-out;
  color: var(--color-text-secondary, #909399);
}

.iconfont .icon__image {
  width: 100%;
  height: 100%;
  display: inline-block;
  vertical-align: sub-text;
  box-sizing: border-box;
}
