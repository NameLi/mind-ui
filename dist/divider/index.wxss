.m-divider {
  display: flex;
  width: 100%;
  height: 76rpx;
  text-align: center;
  font-size: 28rpx;
  position: relative;
  align-items: center;
  justify-content: center;
  color: var(--color-text-secondary);
}

.m-divider__content {
  z-index: 1;
  position: relative;
  display: inline-block;
  max-width: 400rpx;
}

.m-divider__content::before, .m-divider__content::after {
  display: block;
  content: "";
  position: absolute;
  top: 50%;
  width: 120rpx;
  height: 1px;
  transform: scaleY(0.5);
  background-color: currentColor;
}

.m-divider__content::before {
  left: -140rpx;
}
.m-divider__content::after {
  right: -140rpx;
}