<view 
  bindtap="onClick"
  class="m-cell custom-class {{ border ? 'm-hairline--bottom':'' }}"
  hover-class="{{ url ? 'm-cell--hover' : '' }}"  
> 
  <!-- 头部图标 -->
  <view wx:if="{{ icon }}" class="m-cell-icon m-cell__header">
    <m-icon name="{{ icon }}" size="36" color="{{ iconColor ? iconColor : '' }}" />
  </view>

  <!-- 自定义标题 -->
  <view wx:if="{{ title }}" class="m-cell__title">{{ title }}</view>
  <slot wx:else name="title" />

  <!-- 描述内容 -->
  <view wx:if="{{ value }}" class="m-cell__desc {{ isMultiple ? '':'ellipsis' }}">{{ value }}</view>

  <!-- 自定义内容 -->
  <view wx:else class="m-cell__slot">
    <slot />
  </view>

  <!-- 右侧跳转箭头 -->
  <m-icon wx:if="{{ url }}" class="m-cell-icon m-cell__footer" catchtap="navigateTo" name="arrow-right" size="32" color="#999" />
</view>