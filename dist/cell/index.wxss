.m-cell {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 20rpx 32rpx;
  line-height: 54rpx;
  font-size: 28rpx;
}

.m-cell.m-cell--hover {
  background-color: #f7f8f9;
}

.m-cell .m-cell__icon {
  width: 38rpx;
  text-align: center;
}

.m-cell .m-cell__header {
  margin-right: 12rpx;
  display: flex;
  align-items: center;
}

.m-cell .m-cell__title {
  display: flex;
  align-items: center;
  flex: 1;
  color: var(--color-text-primary, #303133);
  vertical-align: middle;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.m-cell .m-cell__desc {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  max-width: 400rpx;
  color: var(--color-text-secondary, #909399);
  font-size: 28rpx;
}

.m-cell .m-cell__desc.is-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.m-cell .m-cell__slot {
  display: inline-flex;
  align-items: center;
}

.m-cell .m-cell__footer {
  text-align: right;
  margin-left: 24rpx;
}
