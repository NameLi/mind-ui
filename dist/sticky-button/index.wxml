<view class="m-sticky-button__wrap custom-class">
  <view 
    class="m-sticky-button {{ toggle ? 'is-active':'' }}"  
    style="{{ bgcolor ? 'background-color:' + bgcolor : '' }}"
    bindtap="toggle"
  >
    <m-icon name="{{ icon }}" size="{{ iconSize }}" color="{{ iconColor }}" />
  </view>

  <view class="m-sticky-button__container">
    <slot />
  </view>
</view>