.m-sticky-item {
  position: relative;
}

.m-sticky-item .m-sticky-item__header-wrap {
  z-index: 9;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  width: 100%;
}

.m-sticky-item .m-sticky-item__header-wrap .m-sticky-item__header {
  width: 100%;
}

.m-sticky-item .m-sticky-item__header-wrap .m-sticky-item__header.m-sticky__is-fixed {
  position: fixed;
  top: 0;
}
