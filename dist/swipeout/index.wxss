.m-swipeout {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  font-size: 14px;
}

.m-swipeout .m-swipeout__content {
  white-space: nowrap;
  overflow: hidden;
}

.m-swipeout .m-swipeout__button--group {
  opacity: 0;
  z-index: 1;
  position: absolute;
  right: 0;
  top: 0;
  display: block;
  height: 100%;
}

.m-swipeout .m-swipeout__button--group.is-ready {
  opacity: 1;
}
