.m-swipeout {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  font-size: 14px;
}

.m-swipeout__content {
  white-space: nowrap;
  overflow: hidden;
}

.m-swipeout__button-group {
  z-index: 1;
  position: absolute;
  left: 100%;
  top: 0;
  height: 100%;
}

.m-swipeout__button-item {
  height: 100%;
  float: left;
  white-space: nowrap;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}