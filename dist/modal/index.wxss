.m-mask {
  z-index: 1000;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 1;
  visibility: visible;
  background: var(--color-mask, rgba(0, 0, 0, 0.55));
  transition: all 0.2s ease-in-out;
}

.m-mask.is-hidden {
  opacity: 0;
  visibility: hidden;
}

.m-modal-wrap {
  z-index: 1001;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  transition: transform 0.2s ease-in-out, opacity .2s ease-in-out;
  opacity: 1;
  visibility: visible;
}

.m-modal-wrap.is-hidden {
  opacity: 0;
  visibility: hidden;
}

.m-modal-wrap .m-modal {
  z-index: 9;
  position: relative;
  width: 540rpx;
}

.m-modal-wrap .m-modal__content {
  position: relative;
  border-radius: 3rpx;
  padding-top: 30rpx;
  background-color: #fff;
  border: 0;
  background-clip: padding-box;
  text-align: center;
  height: 100%;
  overflow: hidden;
}

.m-modal-wrap .m-modal__title {
  margin: 0;
  padding: 12rpx 30rpx 24rpx;
  font-size: 36rpx;
  line-height: 1;
  color: #1c2438;
  text-align: center;
}

.m-modal-wrap .m-modal__body {
  max-height: 300rpx;
  margin-bottom: 30rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #80848f;
  line-height: 1.5;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.m-modal-wrap .m-modal__btn-group {
  position: relative;
  display: flex;
}

.m-modal-wrap .m-modal__btn-group::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  background: #ddd;
}

.m-modal-wrap .m-modal__btn-group .m-modal__btn {
  position: relative;
  flex: 1;
}

.m-modal-wrap .m-modal__btn-group .m-modal__btn.m-modal__btn--cancel::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 1px;
  height: 100%;
  transform: scaleX(0.5);
  background: #ddd;
}
