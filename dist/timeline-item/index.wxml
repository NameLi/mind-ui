<view class="m-timeline {{ isLast ? 'is-last':'' }}">
  <view class="m-timeline__line">
    <m-icon wx:if="{{ icon }}" name="{{ icon }}" color="{{ color }}" />
    <text wx:else style="{{ color ? 'color:' + color : '' }}">{{ text }}</text>
  </view>
  
  <view class="m-timeline__content">
    <slot />
  </view>
</view>